<div class="container">
  <h1>タスク編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <!--%= form_with(model: @task, url:user_tasks_path(@user), local: true) do |f| %>新規作成時のform_with-->
      <%= form_with(model: @task, url:user_task_path(@user), local: true, method: :patch) do |f| %>
      
      <%= f.label :"名称", class: "label-signup" %>
      <%= f.text_field :contentname, class: "form-control" %>
      <%= f.label :"詳細", class: "label-signup" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    　<%= f.submit "編集", class: "btn btn-lg btn-primary btn-form" %> 
    　 <% end %>
    </div>
  </div>