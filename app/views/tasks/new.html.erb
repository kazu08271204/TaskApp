<div class="container">
  <h1>タスク新規投稿</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url:user_tasks_path(@user), local: true) do |f| %>
      <!--render partial: 'ファイル名', locals: { '部分テンプレート内で使う変数': '変数に入れる値' }-->
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      
      <%= f.label :"名称", class: "label-signup" %>
      <%= f.text_field :contentname, class: "form-control" %>
      <%= f.label :"詳細", class: "label-signup" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    　<%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %> 
    　 <% end %>
    </div>
  </div>
   
    
</div>