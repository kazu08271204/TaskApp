<div class="container">
  <h1>ユーザー編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @user, local: true) do |f| %>
      <!--render partial: 'ファイル名', locals: { '部分テンプレート内で使う変数': '変数に入れる値' }-->
      <%= render partial: 'shared/error_messages', locals: { obj: @user } %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
      <% end %>
    </div>
  </div>
</div>
